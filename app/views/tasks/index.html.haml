%h1
  tasks
  .pull-right
    = link_to "new",new_task_path, :class => 'btn btn-primary'
  .row
    .col-sm-12
    %table.table.table-condensed.table-hovered.table-striped.table-bordered
      %thead
        %tr
          %th project id
          %th project Name
          %th subproject id
          %th subproject name
          %th  owner
          %th status
          %th task id
          %th task name
          %th view
      %tbody
        - @tasks.each do|task|
          %tr
            %td= task.project_id
            %td= task.project_name
            %td= task.subproject_id
            %td= task.subproject_name
            %td= task.owner
            %td= task.status
            %td= task.id
            %td= task.task_name
            %td= link_to "view",view_task_path(task),:class => 'btn btn-primary'
