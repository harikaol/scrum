%h1
  Tasks
  .pull-right
    -#  = link_to " Add new",new_task_path, :class => 'btn btn-primary'
  %h4
  .row
    .col-sm-12
      %table.table.table-condensed.table-hovered.table-striped.table-bordered
        %thead
          %tr
            %th Project id
            %th Project Name
            %th Subproject id
            %th Subproject Name
            %th Owner
            %th Status
            %th Task id
            %th Task Name
            %th View
            %th Edit
            %th Add Issues
        %tbody
          - @tasks.each do|task|
            %tr
              %td= task.subproject.project_id
              %td= task.subproject.project.project_name
              %td= task.subproject_id
              %td= task.subproject.subproject_name
              %td= task.owner
              %td= task.status
              %td= task.id
              %td= task.task_name
              %td= link_to "View",view_task_path(task),:class => 'btn btn-primary'
              %td= link_to "Edit",edit_task_path(task),:class => 'btn btn-primary'
              %td= link_to "Add Issues",task_path(task),:class => 'btn btn-success'
