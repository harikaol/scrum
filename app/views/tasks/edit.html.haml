=form_for(@task) do |f|
  .col-sm-12
    .col-sm-3
      project_id
    .col-sm-3
      = @task.subproject.project_id
    .col-sm-3
      project name
    .col-sm-3
      = @task.subproject.project.project_name
  .col-sm-12
    %br
    .col-sm-3
      subproject id
    .col-sm-3
      = @task.subproject_id
    .col-sm-3
      subproject name
    .col-sm-3
      = @task.subproject.subproject_name
  .col-sm-12
    %br
    .col-sm-3
      =f.label :task_name
    .col-sm-3
      =f.text_field :task_name,:class =>"form-control"
    .col-sm-3
      =f.label :priority
    .col-sm-3
      = f.select :priority, options_for_select([['low'],['medium'],['high']]),{:include_blank => 'Select'},:class =>"form-control"
  .col-sm-12
    .col-sm-3
      =f.label :expected_number_of_days
    .col-sm-3
      =f.text_field :expected_number_of_days,:class =>"form-control"
  .col-sm-12
    %br 
    %center
      =f.submit 'done',:class => "btn btn-success"
      =f.submit 'cancel',:class => "btn btn-danger"
