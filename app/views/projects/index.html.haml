%h1
  Projects
.pull-right
  = link_to "Add new",new_project_path, :class => 'btn btn-primary'

  %table.table.table-condensed.table-hovered.table-striped.table-bordered
%br
.dropdown
  %button#menu1.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
    status
    %span.caret
  %ul.dropdown-menu{"aria-labelledby" => "menu1", :role => "menu"}
    %li{:role => "presentation"}
      %a{:href => "#", :role => "menuitem", :tabindex => "-1"} all
    %li{:role => "presentation"}
      %a{:href => "#", :role => "menuitem", :tabindex => "-1"} open
    %li{:role => "presentation"}
      %a{:href => "#", :role => "menuitem", :tabindex => "-1"} close
    %li.divider{:role => "presentation"}
    %li{:role => "presentation"}
      %a{:href => "#", :role => "menuitem", :tabindex => "-1"} abondonded
.row
  .col-sm-12
    %table.table.table-condensed.table-hovered.table-striped.table-bordered
      %thead
        %tr
          %th id
          %th Project Name
          %th description
          %th date received
          %th priority
          %th status
          -# %th number of sub project
          %th View
          %th edit
          %th destroy
          %th close
          %th suspend
          %th abondoned
          %th Add Sub Projects
          %tbody
            - @projects.each do|project|
              %tr
                %td= project.id
                %td= project.project_name
                %td= project.description
                %td= project.date_received 
                %td= project.priority
                %td= project.status
                %td= link_to "view",view_project_path(project),:class =>"btn btn-danger"
                %td= link_to "edit", edit_project_path(project), :class => 'btn btn-info'
                %td= link_to "Destroy", project_path(project),  :class => "btn btn-danger", :data=> {:confirm => "Are you sure?", method: :delete}, :title => "Delete"
                %td=link_to "close",close_project_path(project),:class => "btn btn-info"
                %td= link_to "suspend",suspend_project_path(project),:class => 'btn btn-danger'
                %td= link_to "abondoned",abondoned_project_path(project),:class => 'btn btn-danger'
                %td= link_to "Add sub Project",project_path(project), :class => 'btn btn-success'
