%h1
  tasks
  .pull-right
    = link_to " Add new",new_task_path, :class => 'btn btn-primary'
%h4
  .row
    .col-sm-12
      %table.table.table-condensed.table-hovered.table-striped.table-bordered
        %thead
          %tr
            %th project id
            %th project Name
            %th subproject id
            %th subproject name
            %th owner
            %th status
            %th task id
            %th task name
            %th view
            %th edit
            %th show
        %tbody
          - @tasks.each do|task|
            %tr
              %td= task.subproject.project_id
              %td= task.subproject.project.project_name
              %td= task.subproject_id
              %td= task.subproject.subproject_name
              %td= task.owner
              %td= task.status
              %td= task.id
              %td= task.task_name
              %td= link_to "view",view_task_path(task),:class => 'btn btn-primary'
              %td= link_to "edit",edit_task_path(task),:class => 'btn btn-info'
              %td= link_to "show",task_path(task),:class => 'btn btn-primary'
